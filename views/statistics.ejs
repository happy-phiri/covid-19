<%- include('partials/header'); -%>

<!-- Country Search Box -->

<section class="container">
    <div class="search-form">
        <form action="/statistics" method="post">
            <div class="form">
                <div class="form-group">
                    <input class="form-control" type="text" name="searchCountry" placeholder="Search for your country" autocomplete="off" spellcheck="false">
                </div>
                    <button class="btn btn-outline-primary btn-lg" type="submit">Search</button>
            </div>
        </form>
    </div>
</section>

<!-- Javascript Code for date -->

<% let options = {year: 'numeric', month: 'short', day: 'numeric'}; %> 
<% let today  = new Date(); %> 
<% let date = today.toLocaleDateString("en-US", options); %>

<!--Continent Statistics Tables-->

<section class="container">
